---
import RootLayout from '../layouts/RootLayout.astro'
import { getTextColorFromBgColor } from '../utils'
import { THEME_MAP } from '../constants'
---

<RootLayout title="Themes">
  <div class="flex flex-col items-center">
    {
      Object.entries(THEME_MAP).map(([key, theme]) => (
        <div>
          <button>{key}</button>

          <div>
            <h3>Colors</h3>

            {Object.entries(theme.colors).map(([category, values]) => (
              <div>
                <h4>{category}</h4>
                <ul class="flex items-center">
                  {values.map(color => (
                    <li class="p-4 font-mono" style={{ backgroundColor: color, color: getTextColorFromBgColor(color) }}>
                      {color}
                    </li>
                  ))}
                </ul>
              </div>
            ))}
          </div>

          <div>
            <h3>Fonts</h3>

            {Object.entries(theme.fontFamily).map(([category, value]) => (
              <div>
                <h4>{category}</h4>
                <p style={{ fontFamily: value }}>{value}</p>
              </div>
            ))}
          </div>
        </div>
      ))
    }
  </div>
</RootLayout>
