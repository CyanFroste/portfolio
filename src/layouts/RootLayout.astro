---
import { ViewTransitions } from 'astro:transitions'

type Props = { title: string }

const { title } = Astro.props
---

<html lang="en" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Cyan Froste's Domain" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Pacifico&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="h-full" transition:animate="slide">
    <slot />

    <style is:global>
      .link {
        @apply block after:block after:absolute relative after:scale-x-0 after:origin-right hover:after:origin-left after:duration-200
		    after:inset-0 after:-z-10 py-2 px-4 after:bg-zinc-800 after:transition-transform hover:after:scale-x-100 after:w-full after:h-full;
      }
    </style>
  </body>
</html>
