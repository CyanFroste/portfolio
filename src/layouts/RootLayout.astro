---
import { ViewTransitions } from 'astro:transitions'
import FloatingMenu from '../components/FloatingMenu.astro'

type Props = { title: string }

const { title } = Astro.props
---

<html lang="en" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Cyan Froste's Domain" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Amita:wght@400;700&family=JetBrains+Mono:ital,wght@0,100..800;1,100..800&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="h-full bg-gray-100 text-gray-700 font-body" transition:animate="fade">
    <slot />
    <FloatingMenu />
  </body>
</html>

<script>
  import { applyTheme } from '../themes/store'

  document.addEventListener('astro:page-load', () => applyTheme())
</script>

<style is:global>
  :root {
    font-size: 18px;
  }
</style>
